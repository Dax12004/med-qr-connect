modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run dev"]

[workflows]
runButton = "dev"

[[workflows.workflow]]
name = "dev"
author = 41550593
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "backend"
author = 41550593
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node src/server/index.js"

[[ports]]
localPort = 4173
externalPort = 80

[[ports]]
localPort = 4174
externalPort = 3000

[[ports]]
localPort = 8080
externalPort = 8080
